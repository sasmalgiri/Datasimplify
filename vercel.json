{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    {
      "path": "/api/sync?secret=${SYNC_SECRET_KEY}&type=market",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/sync?secret=${SYNC_SECRET_KEY}&type=defi",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/sync?secret=${SYNC_SECRET_KEY}&type=onchain",
      "schedule": "0 */1 * * *"
    },
    {
      "path": "/api/sync?secret=${SYNC_SECRET_KEY}&type=sentiment",
      "schedule": "0 */2 * * *"
    }
  ]
}
