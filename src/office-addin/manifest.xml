<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
           xsi:type="TaskPaneApp">

  <!-- Basic Properties -->
  <Id>a1b2c3d4-e5f6-7890-abcd-ef1234567890</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>CryptoReportKit</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="CryptoReportKit Charts" />
  <Description DefaultValue="Interactive crypto charts powered by ChartJS. Visualize your CryptoSheets data with animations and real-time updates." />
  <IconUrl DefaultValue="https://cryptoreportkit.com/icon-32.png" />
  <HighResolutionIconUrl DefaultValue="https://cryptoreportkit.com/icon-64.png" />
  <SupportUrl DefaultValue="https://cryptoreportkit.com/support" />

  <!-- App Domain - where the add-in is hosted -->
  <AppDomains>
    <AppDomain>https://cryptoreportkit.com</AppDomain>
  </AppDomains>

  <!-- Hosts this add-in supports -->
  <Hosts>
    <Host Name="Workbook" />
  </Hosts>

  <!-- Default Settings -->
  <DefaultSettings>
    <SourceLocation DefaultValue="https://cryptoreportkit.com/addin/taskpane.html" />
  </DefaultSettings>

  <!-- Permissions -->
  <Permissions>ReadWriteDocument</Permissions>

  <!-- Version Overrides for modern experience -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Workbook">
        <DesktopFormFactor>

          <!-- Function File for custom functions -->
          <FunctionFile resid="Contoso.FunctionFile.Url" />

          <!-- Extension Point: Primary Command Surface -->
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="CryptoReportKitGroup">
                <Label resid="CryptoReportKit.GroupLabel" />
                <Icon>
                  <bt:Image size="16" resid="CryptoReportKit.Icon16" />
                  <bt:Image size="32" resid="CryptoReportKit.Icon32" />
                  <bt:Image size="80" resid="CryptoReportKit.Icon80" />
                </Icon>

                <!-- Show Charts Button -->
                <Control xsi:type="Button" id="ShowChartsButton">
                  <Label resid="CryptoReportKit.ShowCharts.Label" />
                  <Supertip>
                    <Title resid="CryptoReportKit.ShowCharts.Title" />
                    <Description resid="CryptoReportKit.ShowCharts.Description" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="CryptoReportKit.Icon16" />
                    <bt:Image size="32" resid="CryptoReportKit.Icon32" />
                    <bt:Image size="80" resid="CryptoReportKit.Icon80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>CryptoReportKitTaskpane</TaskpaneId>
                    <SourceLocation resid="CryptoReportKit.Taskpane.Url" />
                  </Action>
                </Control>

                <!-- Refresh Data Button -->
                <Control xsi:type="Button" id="RefreshDataButton">
                  <Label resid="CryptoReportKit.RefreshData.Label" />
                  <Supertip>
                    <Title resid="CryptoReportKit.RefreshData.Title" />
                    <Description resid="CryptoReportKit.RefreshData.Description" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="CryptoReportKit.RefreshIcon16" />
                    <bt:Image size="32" resid="CryptoReportKit.RefreshIcon32" />
                    <bt:Image size="80" resid="CryptoReportKit.RefreshIcon80" />
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>refreshAllCharts</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <!-- Resources -->
    <Resources>
      <bt:Images>
        <bt:Image id="CryptoReportKit.Icon16" DefaultValue="https://cryptoreportkit.com/addin/assets/icon-16.png" />
        <bt:Image id="CryptoReportKit.Icon32" DefaultValue="https://cryptoreportkit.com/addin/assets/icon-32.png" />
        <bt:Image id="CryptoReportKit.Icon80" DefaultValue="https://cryptoreportkit.com/addin/assets/icon-80.png" />
        <bt:Image id="CryptoReportKit.RefreshIcon16" DefaultValue="https://cryptoreportkit.com/addin/assets/refresh-16.png" />
        <bt:Image id="CryptoReportKit.RefreshIcon32" DefaultValue="https://cryptoreportkit.com/addin/assets/refresh-32.png" />
        <bt:Image id="CryptoReportKit.RefreshIcon80" DefaultValue="https://cryptoreportkit.com/addin/assets/refresh-80.png" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="CryptoReportKit.Taskpane.Url" DefaultValue="https://cryptoreportkit.com/addin/taskpane.html" />
        <bt:Url id="Contoso.FunctionFile.Url" DefaultValue="https://cryptoreportkit.com/addin/functions.html" />
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="CryptoReportKit.GroupLabel" DefaultValue="CryptoReportKit" />
        <bt:String id="CryptoReportKit.ShowCharts.Label" DefaultValue="Show Charts" />
        <bt:String id="CryptoReportKit.ShowCharts.Title" DefaultValue="CryptoReportKit Interactive Charts" />
        <bt:String id="CryptoReportKit.RefreshData.Label" DefaultValue="Refresh" />
        <bt:String id="CryptoReportKit.RefreshData.Title" DefaultValue="Refresh Chart Data" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="CryptoReportKit.ShowCharts.Description" DefaultValue="Open the CryptoReportKit charts panel to visualize your crypto data with interactive ChartJS charts." />
        <bt:String id="CryptoReportKit.RefreshData.Description" DefaultValue="Refresh all charts with the latest data from your spreadsheet." />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
